extends ../layout

block links
  link(rel='stylesheet', href='/stylesheets/widgets.css')
  link(rel='stylesheet', href='/stylesheets/main/files.css')
  script(src="/javascripts/fs.js")
  script(src="/javascripts/widgets.js")
  script(src="/javascripts/main/files.js")

block content
  #main
    #interfaces
      #addInterface.interface
        .interfaceHeader
          .interfaceTitle add items
          .closeInterface.fas.fa-times
        .interfaceContent
          .ui-input-container
            p path:
            input#addDirectory(type='text' name='directory' placeholder="directory")
          .ui-input-container
            p link length:
            input#addLink(type="number" name="linkLength" min="4" max="16")
          .ui-input-container
            p display style:
            select#addDisplay(name='display')
              option(value='default' selected) default
              option(value='gallery') gallery
          .ui-button-collection
            #addCancel.ui-button.confirmButton Cancel
            #addConfirm.ui-button.cancelButton Add
      #moveInterface.interface
        .interfaceHeader
          .interfaceTitle move items
          .closeInterface.fas.fa-times
        .interfaceContent
          input#moveInput(type="text" placeholder="new path")
          .ui-button-collection
            #moveCancel.ui-button.confirmButton Cancel
            #moveConfirm.ui-button.cancelButton Move
      #deleteInterface.interface
        .interfaceHeader
          .interfaceTitle delete items
          .closeInterface.fas.fa-times
        .interfaceContent
          p Are you sure you want to delete these items? This action cannot be undone.
          .ui-button-collection
            #deleteCancel.ui-button.confirmButton Cancel
            #deleteConfirm.ui-button.cancelButton Delete
    #files
    #actions
      .ui-button-collection
        #addButton.ui-button +
        #moveButton.ui-button.ui-button-inactive Move
        #deleteButton.ui-button.ui-button-inactive Delete
      #otherActions.fas.fa-ellipsis-h
      
